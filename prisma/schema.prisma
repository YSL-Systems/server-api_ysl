generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User  {
  id Int @id @default(autoincrement())
  name String
  phone String @unique
  password String
  role Role @default(USER)
  topic String
  city String
  photo String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Token {
  id Int @id @default(autoincrement())
  userId Int
  token String

  @@map("tokens")
}

enum Role {
  SUPERVISOR
  ADMIN
  USER
}